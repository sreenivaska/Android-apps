<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical"
	android:layout_width="fill_parent" android:layout_height="fill_parent">
	<LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content"
	android:id="@+id/detlist_toolbar" android:background="@color/detlist_info_bg"
	android:gravity="center" android:paddingTop="5dp">
		<ImageButton android:id="@+id/detlist_prev" android:layout_width="fill_parent" android:layout_height="wrap_content" 
		android:layout_weight="1" android:src="@drawable/btn_back"/>
		<ImageButton android:id="@+id/detlist_today" android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:layout_weight="1"  android:src="@drawable/btn_today"/>
		<ImageButton android:id="@+id/detlist_next" android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:layout_weight="1"  android:src="@drawable/btn_forward"/>
		<ImageButton android:id="@+id/detlist_mode" android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:layout_weight="1"  android:src="@drawable/btn_week"/>
	</LinearLayout>
	<TextView android:layout_width="fill_parent" android:layout_height="wrap_content" android:id="@+id/detlist_infobar"
	android:textSize="18sp" android:text="" android:singleLine="true" android:background="@color/detlist_info_bg"
	android:textColor="@color/detlist_info_fg" android:gravity="center" android:ellipsize="end"/>
    <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content" android:orientation="horizontal"  android:background="@color/detlist_summary_bg"
    android:gravity="center">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/detlist_sum_unknow"
        android:textSize="16sp" android:text="......" android:textColor="@color/unknow_fgl"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/detlist_sum_income" android:gravity="center"
        android:textSize="12sp" android:textColor="@color/income_fgl" android:paddingRight="5dp" android:ellipsize="start" android:layout_weight="1"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/detlist_sum_expense"  android:gravity="center"
        android:textSize="12sp" android:textColor="@color/expense_fgl" android:paddingRight="5dp"  android:ellipsize="start"  android:layout_weight="1"/>        
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/detlist_sum_asset"  android:gravity="center"
        android:textSize="12sp" android:textColor="@color/asset_fgl" android:paddingRight="5dp"  android:ellipsize="start"  android:layout_weight="1"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/detlist_sum_liability"  android:gravity="center"
        android:textSize="12sp" android:textColor="@color/liability_fgl"  android:paddingRight="5dp"  android:ellipsize="start"  android:layout_weight="1"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/detlist_sum_other"  android:gravity="center"
        android:textSize="12sp" android:textColor="@color/other_fgl" android:ellipsize="start"  android:layout_weight="1"/>
    </LinearLayout>

    
    <ListView android:id="@+id/detlist_list" android:layout_width="fill_parent" android:layout_height="fill_parent"/>
</LinearLayout>
